<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/messageBackground"
        android:layout_width="match_parent"
        android:layout_alignLeft="@+id/text_content_message_chat"
        android:layout_alignBottom="@+id/text_content_message_chat"
        android:layout_alignTop="@+id/text_content_message_chat"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:background="@drawable/outgoing_chat_bubble_bg"/>


    <TextView
        android:id="@+id/text_content_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASasdasdaasdasdasd"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>