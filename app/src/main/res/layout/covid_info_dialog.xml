<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/backgrond_rectangle"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_corner" />

    <TextView
        android:id="@+id/title_dialog_covid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backgrond_rectangle"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:gravity="center_vertical"
        android:text="@string/title_covid"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_covid_dialog_horari"
        android:elevation="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_dialog_covid"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:text="@string/horari_dialog_covid"
        />

    <TextView
        android:id="@+id/text_horari_value_covid_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/title_dialog_covid"
        android:text="08:00-20:00"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/text_ocupacio_covid_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:layout_below="@+id/text_covid_dialog_horari"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:text="@string/ocupation_text_covid_dialog"
        />
    <!--Color indicator for afluence-->
    <TextView
        android:id="@+id/color_indicator_dialog_covid"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/text_ocupacio_covid_dialog"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ocupation_button"
        android:backgroundTint="@color/red_alert"
        android:layout_below="@+id/text_horari_value_covid_dialog"/>
    <!-- User icon on top of indicator-->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="12dp"
        android:layout_alignBottom="@+id/color_indicator_dialog_covid"
        android:layout_alignRight="@+id/color_indicator_dialog_covid"
        android:background="@drawable/ic_action_user"/>

    <TextView
        android:id="@+id/rest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_ocupacio_covid_dialog"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="@string/restriccions_text_dialog_covid"/>

    <TextView
        android:id="@+id/restrictions_covid_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_title"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_graph_dialog"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="1dp"
        android:layout_alignBottom="@+id/backgrond_rectangle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="40dp" />


</RelativeLayout>