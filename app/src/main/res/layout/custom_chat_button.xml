<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/image_chat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:clickable="false"
        android:layout_margin="10dp"
        android:layout_alignTop="@+id/chat_name"
        android:layout_alignBottom="@+id/chat_name"
        android:elevation="11dp"
        android:src="@drawable/mnac_default"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chat_name"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:backgroundTint="?attr/colorSurface"
        app:rippleColor="?attr/colorOnSurface"
        android:insetBottom="2dp"
        android:insetTop="2dp"
        android:clickable="true"
        android:elevation="1dp"
        android:gravity="center"
        android:text="ASDASDASD"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iconUsers"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="false"
        android:elevation="11dp"
        android:background="@drawable/ic_action_user"
        android:backgroundTint="?android:textColorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/image_chat"/>

    <TextView
        android:id="@+id/users_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iconUsers"
        android:layout_alignBottom="@id/iconUsers"
        android:layout_alignTop="@id/iconUsers"
        android:elevation="11dp"
        android:clickable="false"
        android:gravity="center"
        android:text="10"
        android:textStyle="bold"
        android:textSize="20sp"
        />

</RelativeLayout>