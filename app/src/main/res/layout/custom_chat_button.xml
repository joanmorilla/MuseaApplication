<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/image_chat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:clickable="false"
        android:layout_margin="10dp"
        android:layout_alignTop="@+id/chat_name"
        android:layout_alignBottom="@+id/chat_name"
        android:elevation="11dp"
        android:src="@drawable/mnac_default"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chat_name"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:backgroundTint="?attr/colorSurface"
        app:rippleColor="?attr/colorOnSurface"
        android:insetBottom="2dp"
        android:insetTop="2dp"
        android:clickable="true"
        android:elevation="1dp"
        android:gravity="center"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_chat"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/chat_name"
        android:layout_alignTop="@+id/chat_name"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:elevation="6dp"
        android:text="ADASDASD"
        android:textStyle="bold"
        android:textSize="15dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="?android:textColorPrimary"/>

</RelativeLayout>