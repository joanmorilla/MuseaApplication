<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Comentaris_Fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_big"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:elevation="11dp"/>

        <ImageButton
            android:id="@+id/back_arrow_comments"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_arrow"/>

        <TextView
            android:layout_toRightOf="@+id/back_arrow_comments"
            android:layout_alignTop="@+id/back_arrow_comments"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Comments"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/back_arrow_comments" />
    </RelativeLayout>
        <ScrollView
            android:id="@+id/scrollView_Comments"
            android:layout_below="@+id/toolbar_big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:id="@+id/linearlayout_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/custom_comment" />
            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/user_image_bottom"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/mnac_default"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <EditText
                android:id="@+id/comment_input"
                android:layout_toRightOf="@+id/user_image_bottom"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@android:color/transparent"
                android:elegantTextHeight="true"
                android:hint="Your comment here..." />

            <ImageButton
                android:id="@+id/post_comment_button"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_round_send_24"/>
        </RelativeLayout>




</RelativeLayout>