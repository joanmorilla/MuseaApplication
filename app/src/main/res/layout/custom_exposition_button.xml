<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginBottom="15dp">

    <ImageButton
        android:id="@+id/image_button_expo"
        android:layout_width="match_parent"
        android:background="@drawable/mnac_default"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="1dp"
        />

    <TextView
        android:id="@+id/white_rectangle_expo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Un nombre de expo"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:layout_alignRight="@+id/image_button_expo"
        android:layout_alignLeft="@+id/image_button_expo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:elevation="5dp"
        android:background="?attr/colorSurface"
        />

</RelativeLayout>