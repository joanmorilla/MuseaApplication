<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/image_view"
        android:layout_width="225dp"
        android:layout_height="140dp"
        android:elevation="1dp"
        android:background="@drawable/mnac_default" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/white_rectangle"
        android:layout_alignRight="@+id/white_rectangle"
        android:layout_alignLeft="@id/white_rectangle">


        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_horari"
            android:layout_alignBottom="@+id/text_pais"
            android:layout_toLeftOf="@+id/barrier"
            android:elevation="12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="Prueba"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/barrier"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="maps_icon"
            />

        <TextView
            android:id="@+id/text_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:elevation="6dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text="Paismuymuymuy"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_horari"
            app:layout_constraintVertical_bias="0.39" />

        <ImageView
            android:id="@+id/maps_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/text_pais"
            android:background="@drawable/ic_outline_location_on_24"
            android:elevation="6dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_pais"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/circle_heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ocupation_button"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:layout_alignRight="@+id/white_rectangle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_action_heart"
        android:elevation="11dp"
        android:clickable="false"
        android:layout_alignTop="@+id/circle_heart"
        android:layout_alignBottom="@+id/circle_heart"
        android:layout_alignLeft="@+id/circle_heart"
        android:layout_alignRight="@+id/circle_heart"/>
    <TextView
        android:id="@+id/white_rectangle"
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:textColor="#F2151515"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:layout_alignParentBottom="true"
        android:background="@drawable/two_sided_border"/>


</RelativeLayout>