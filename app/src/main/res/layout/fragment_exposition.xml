<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout_expo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.ExpositionFragment">

    <ImageButton
        android:id="@+id/back_arrow_work"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back_arrow"
        android:elevation="20dp"/>

    <ImageButton
        android:id="@+id/join_chat_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_add_comment_24"
        android:backgroundTint="@color/black"
        android:elevation="20dp"/>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/image_holder_expo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/mnac_default"
        android:elevation="1dp"
        />

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/expo_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:fitsSystemWindows="true"
        android:text="@string/hello_blank_fragment"
        android:background="#88B5B2B2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:elevation="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/expo_title"
        android:id="@+id/linear_layout_expo"
        android:background="@android:color/transparent">

        <androidx.viewpager.widget.ViewPager
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/view_pager_works"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>