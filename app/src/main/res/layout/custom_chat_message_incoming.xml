<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <com.rey.material.widget.Button
        android:id="@+id/messageBackgroundIncoming"
        android:layout_width="match_parent"
        android:layout_alignRight="@+id/text_content_message_chat"
        android:layout_alignBottom="@+id/text_content_message_chat"
        android:layout_alignTop="@+id/text_usuari_message_chat"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:background="@drawable/incoming_chat_bubble_bg"
        />

    <TextView
        android:id="@+id/text_usuari_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuari"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:elevation="11dp"
        android:paddingLeft="25dp" />


    <TextView
        android:id="@+id/text_content_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_usuari_message_chat"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="1dp"
        android:elevation="11dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:text="ASasdasdaasdasdasd asdasd asdasd" />

</RelativeLayout>